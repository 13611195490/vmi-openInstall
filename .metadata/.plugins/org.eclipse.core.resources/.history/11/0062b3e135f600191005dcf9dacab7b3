  // 获取视频
  function autoVideo() {

    // 随机获取一条视频数据
    var rand = Math.floor(Math.random() * videoList.length + 1) - 1;
    console.log(rand, 'rand')
    var randIndex = videoList[rand];
    console.log(randIndex)

    // 绑定的数据
    var str = '';
    var url = randIndex;
    var wHeight = document.body.clientHeight;
    str +=
      '<video id="video" autoplay="autoplay" controls="controls" x5-video-player-type="h5" x5-video-player-fullscreen="true" style="object-fit:fill">'
    str += '<source src="' + url + '" type="video/mp4">'
    str += '</source>'
    str += '</video>'
    $('.videoBox').html(str)
  };
  autoVideo()

  // 随机数
  function myRandom(n, m) {
    var c = m - n + 1;
    return Math.floor(Math.random() * c + n);
  }

  //随机热度显示
  function randomHot() {
    console.log(myRandom(2000, 3000), '随机数')
    $('.one').html(myRandom(2000, 3000))
    $('.two').html(myRandom(5000, 9000))
    $('.there').html(myRandom(200, 900))
  }

  // 切换主播按钮
  $('#changeGirl').on('click', function () {
    // 点击随机获取热度值
    randomHot()
    // 点击播放下一条视频
    autoVideo()
    //播放完毕继续播放下一条
    window.video.onended = function () {
      randomHot()
      var rand = Math.floor(Math.random() * videoList.length + 1) - 1;
      var randIndex = videoList[rand];
      this.src = randIndex;
    }
  })

  //播放完毕继续播放下一条
  window.video.onended = function () {
    randomHot()

    var rand = Math.floor(Math.random() * videoList.length + 1) - 1;
    var randIndex = videoList[rand];
    console.log(randIndex, 'randIndex')
    this.src = randIndex;
  }

