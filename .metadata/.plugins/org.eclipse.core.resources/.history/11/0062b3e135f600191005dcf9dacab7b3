  function appDown() {

    if (mobileType == 1) {
      console.log(window.navigator.userAgent, 'userAgent')
      // window.location.href = 'http://noss.yoyo.liaomeivideo.com/upload/app/android/apk/12.apk';
    } else if (mobileType == 2) {
      // window.location.href = 'http://47.95.194.184/apk/miliao_5.0.0.apk';
      var $message = $('#message');
      $message.html('暂不支持苹果下载！');
      $message.show();
      setTimeout(function () {
        $message.hide();
      }, 3000)
      return
    }
  }

  //秘密聊天按钮
  $('#chatBtn').on('click', function () {
    // alert('正在维护中~~~')
    appDown()
  })

  //跳转到其他h5的 WebView
  function gotoH5Fragment(urls, title) {
    var h5ParamAndroid = {
      "strValue1": urls,
      "strValue2": 私密聊
    };
    if (mobileType == 1) {
      window.target.gotoAppPage('WebSingleSaveFragment', JSON.stringify(h5ParamAndroid));
    } else if (mobileType == 2) {
      window.webkit.messageHandlers.goToH5Page.postMessage({
        "url": urls
      });
    }
  }


  // 是qq浏览器
  function is_qq() {
    var sUserAgent = navigator.userAgent.toLowerCase();
    if (sUserAgent.match(/QQ/i) == 'qq') {
      return true
    } else {
      return false
    }
  }
  // 是微信浏览器
  function is_weiXin() {
    var ua = navigator.userAgent.toLowerCase();
    if (ua.match(/MicroMessenger/i) == "micromessenger") {
      return true;
    } else {
      return false;
    }
  }

