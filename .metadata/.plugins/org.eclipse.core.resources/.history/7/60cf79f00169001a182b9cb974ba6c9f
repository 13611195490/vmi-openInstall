<script>
	var httpHeader = '$!{encrypt}';
	//查看联系方式接口
	var contact = '${rc.contextPath}/wx/buy/anchor/contact';
	//微信购买私密视频/相册接口
	var privacyPhoto = '${rc.contextPath}/wx/obscrue/look/privacy/photo';
	//微信购买私密视频/相册列表接口
	var photoList = '${rc.contextPath}/wx/obscrue/photo/list';
	//微信充值接口
	var wxPay = '${rc.contextPath}/wx/charge/pay';
	//拨打视频接口
	var wxDialing = '${rc.contextPath}/wx/videoChat/wxDialing';
	//获取验证码
	var getMobileCode = '${rc.contextPath}/wx/videoChat/getMobileCode';
	//绑定手机号  
	 var bindMobile = '${rc.contextPath}/wx/videoChat /bindMobile';
	
	//主播相册 主播相册
	  function goPrivacyPhoto(photoId, type,videoPath) {
	    var params = {
   		  videoId: photoId,
	      type: type,
	      videoPath:videoPath
	    }
	    $.ajax({
	      url: photoList,
	      method: "POST",
	      async: true,
	      cache: false,
	      dataType: "json",
	      contentType: "application/json;charset=utf-8",
	      headers: {
	        "header-encrypt-code": httpHeader
	      },
	      data: JSON.stringify(params),
	      success(data) {
	        console.log(data, '主播相册视频接口')
	        if (data.code == 0) {
	          showBigImg();
	        }
	        if (data.code == 1044) {
	          zuanNO()
	        }
	        if(data.buy == 0){
	        	alert('123')
	        }
	      },
	      error: function (err) {
	        console.log(err);
	      }
	    });
	  }
	
</script>
