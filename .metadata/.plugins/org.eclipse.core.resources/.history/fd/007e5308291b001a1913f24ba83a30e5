  //跳转到购买vip
  function MyVipFragment() {

    if (mobileType == 1) {
      window.target.gotoAppPage('MyVipFragment', JSON.stringify(''));
    } else if (mobileType == 2) {
      // var BuyVipParamIos = {"pageType":15,"param":{}}                                        
      window.webkit.messageHandlers.skipManager.postMessage('');
    }
  }

  //跳转到其他h5的 WebView
  function gotoH5Fragment(urls, title) {
    var h5ParamAndroid = {
      "strValue1": urls,
      "strValue2": 领取话费
    };
    if (mobileType == 1) {
      window.target.gotoAppPage('WebSingleSaveFragment', JSON.stringify(h5ParamAndroid));
    } else if (mobileType == 2) {
      window.webkit.messageHandlers.goToH5Page.postMessage({
        "url": urls
      });
    }
  }

  // 顶部|底部 导航栏返回事件
  function requestGoBack() {
    gotoAppBack();
  }
</script>

