    function appDown() {

      if (mobileType == 1) {
        window.location.href = 'http://47.95.194.184/apk/miliao_5.0.0.apk';
      } else if (mobileType == 2) {
          window.location.href = 'https://itunes.apple.com/cn/app/id1498882755';
      }
    }
